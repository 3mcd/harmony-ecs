{
  "name": "harmony-ecs",
  "version": "0.0.2",
  "description": "A small archetypal ECS focused on compatibility and performance",
  "type": "module",
  "types": "./lib/dist/esm/index.d.ts",
  "main": "./lib/dist/cjs/index.js",
  "exports": {
    "import": "./lib/dist/esm/index.js",
    "require": "./lib/dist/cjs/index.js"
  },
  "files": [
    "lib/dist"
  ],
  "scripts": {
    "perf:node": "npm run build && node --es-module-specifier-resolution=node perf/dist/index.js",
    "perf:browser": "npm run build && cd ./perf && vite",
    "build": "tsc -b lib && tsc -b lib/tsconfig.cjs.json && tsc -b perf",
    "postbuild": "node lib/build/optimize.js",
    "prepare": "npm run build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Eric McDaniel <eric.g.mcdaniel@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.15.5",
    "typescript": "^4.4.2",
    "vite": "^2.5.3"
  }
}
